<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9 text-center">
    <div class="card">
      <div class="card-header">
        Location
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @room do |f| %>
              <div class="form-group">
                <label>Address</label>
                <%= f.text_field :address, placeholder: 'What is your address?', class: 'form-control', required: true %>
              </div>

            <div class="text-center">
              <%= f.submit 'Save', class: 'btn btn-form' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
