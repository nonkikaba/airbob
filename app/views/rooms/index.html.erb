<div class="row">
  <div class="col-md-3">
    <div class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Your Listings", rooms_path, class: "sidebar-link active" %>
      </li>
      <li class="sidebar-item">
        <%= link_to "Your Reservations", rooms_path, class: "sidebar-link" %>
      </li>
    </div>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        Listings
      </div>
      <div class="card-body">
        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag room.cover_photo(:thumb) %>
            </div>
            <div class="col-md-7">
              <h5><%= room.listing_name %></h5>
            </div>
            <div class="col-md-3">
              <%= link_to "Update", listing_room_path(room), class: "btn btn-form" %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
