<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        Description
      </div>
      <div class="card-body">
        <div class="container">
          <%= form_for @room do |f| %>
              <div class="form-group">
                <label>Listing name</label>
                <%= f.text_field :listing_name, placeholder: 'What is your listing name?', class: 'form-control', required: true %>
              </div>

              <div class="form-group">
                <label>Summary</label>
                <%= f.text_area :summary, rows: 5, placeholder: 'Summary of your house', class: 'form-control', required: true %>
              </div>
            <div class="text-center">
              <%= f.submit 'Save', class: 'btn btn-form' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
