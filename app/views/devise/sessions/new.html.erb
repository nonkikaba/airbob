<div class="row">
  <div class="col-md-6 offset-md-3 text-center">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: 'Emailアドレス', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: 'パスワード', autocomplete: "off" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>パスワードを記憶させますか？
        <% end %>
        <span class='col ml-auto'>
          <%= link_to 'パスワードを忘れてしまった場合', new_user_password_path %>
        </span>
      </div>
      <br/><br/>
      

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-normal btn-block" %>
      </div>
    <% end %>

    <hr/>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  </div>
</div>
