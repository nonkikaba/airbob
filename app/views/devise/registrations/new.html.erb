<div class="row">
  <div class="col-md-6 offset-md-3 text-center">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "shared/deviseErrorMsg" %>

      <div class="form-group">
        <%= f.text_field :fullname, class: "form-control", placeholder: 'フルネーム', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder: 'Emailアドレス', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password,  class: "form-control", placeholder: 'パスワード', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "btn btn-normal btn-block" %>
      </div>
    <% end %>

    <hr/>
    <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  </div>
</div>
