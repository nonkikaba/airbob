<div class="row">
  <div class="col-md-3">
    <div class="card">
      <%= image_tag avatar_url(@user), class: "avatar-full card-img-top" %>
      <h5 class="card-header text-center">ユーザー情報</h5>
      <div class="card-body">
        <p class="card-text">Email アドレス: <br>
        電話番号: </p>
      </div>
    </div>
    
  <div class="col-md-9">
    <h2><%= @user.fullname %></h2>

    <div class="description row-space-3">
      <%= @user.description %>
    </div>
  </div>
</div>
